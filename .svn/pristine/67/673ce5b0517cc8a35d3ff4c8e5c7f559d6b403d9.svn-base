spring:
  profiles:
    active: ${SPRING_PROFILES_ACTIVE:dev}
  application:
      name: cloudplatform-gateway
  cloud:
    loadbalancer:
      retry:
        enabled: true
#  cloud:
#    config:
#      uri: http://${config.host:192.168.1.140}:${config.port:8888}

eureka:
   client:
     serviceUrl:
       defaultZone: http://user:password123@localhost:8761/eureka
   instance:
     prefer-ip-address: true
     instance-id: ${spring.application.name}:${spring.cloud.client.ipAddress}:${spring.application.instance_id:${server.port}}
zuul:
  routes:
    uaa:
      path: /uaa/**
      sensitiveHeaders:
      serviceId: cloudplatform-auth
    web:
      path: /web/**
      sensitiveHeaders:
      serviceId: cloudplatform-web
    user:
      path: /user/**
      sensitiveHeaders:
      serviceId: cloudplatform-user
    execute:
      path: /testexecute/**
      sensitiveHeaders:
      serviceId: cloudplatform-testexecute
    customer:
      path: /customer/**
      sensitiveHeaders:
      serviceId: cloudplatform-cust
    project:
      path: /project/**
      sensitiveHeaders:
      serviceId: cloudplatform-project
    testbug:
      path: /testbug/**
      sensitiveHeaders:
      serviceId: cloudplatform-testbug
    image:
      path: /image/**
      url: http://192.168.0.100:8180/httpfiletrans/HttpFileTrans
    dictionary:
      path: /dictionary/**
      sensitiveHeaders:
      serviceId: cloudplatform-dictionary
  add-proxy-headers: true
  host:
    max-total-connections: 500
    connect-timeout-millis: 60000
    socket-timeout-millis: 60000


security:
  oauth2:
    client:
      access-token-uri: http://192.168.0.100:8080/uaa/oauth/token
      user-authorization-uri: http://192.168.0.100:8080/uaa/oauth/authorize
      client-id: webapp

    resource:
      user-info-uri: http://192.168.0.100:8080/uaa/user
      prefer-token-info: false

hystrix:
  command:
    default:
      execution:
        isolation:
          thread:
            timeoutInMilliseconds: 60000
ribbon:
  ConnectTimeout: 60000
  ReadTimeout: 60000




